{
  "compilerOptions": {
    "module": "ES2020",
    "lib": ["ES2020"],
    "target": "es5",
    "moduleResolution": "node",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,

    "outDir": "build",
  },
  "include": [
    "src/**/*"
  ]
}